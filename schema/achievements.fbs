namespace DS3C;

table Achievement{
  name: string;
  description: string; // markdown
  tasks: [Task];
}

table Task{
  id: uint32;
  name: string; // markdown
  description: string; // markdown
  note: string; // text, null for everything except Ring achievements
}

table AchievementsRoot{
  items: [Achievement];
}

root_type AchievementsRoot;
